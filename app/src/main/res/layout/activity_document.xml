<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    tools:context="nl.devolksbank.nlhelpu.activity.DocumentActivity">

    <TextView
        android:id="@+id/txtDocumentCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/document_activity_header_section" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonNewDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorButtons"
            android:text="@string/button_add_new_document_page"
            tools:ignore="InefficientWeight" />
    </LinearLayout>

    <ListView
        android:id="@+id/documentPartlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
