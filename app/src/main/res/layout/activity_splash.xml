<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="nl.devolksbank.nlhelpu.activity.SplashActivity">

    <Button
        android:id="@+id/buttonCloseSplashscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorButtons"
        android:text="@string/button_hide_splash_screen" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/web_hi_res_512"
        android:contentDescription="@string/splash_screen_info"
        android:layout_above="@+id/buttonCloseSplashscreen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCloseSplashscreen"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimaryLight"
        android:textAlignment="center"
        android:text="@string/splash_screen_info" />
</RelativeLayout>
